{
  "description": "TBDollars to BTC",
  "payoutUnitsPerPayinUnit": "0.000028", // Example: For every 1 TBD, 0.000028 BTC is paid out
  "payoutCurrency": { "currencyCode": "BTC" },
  "payinCurrency": { "currencyCode": "TBD" },
  "payinMethods": [{
    "kind": "ABC_LEDGER",
    "requiredPaymentDetails": {}
  }],
  "payoutMethods": [
    {
      "kind": "BTC_ADDRESS",
      "requiredPaymentDetails": {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "title": "Bitcoin Address Required Payment Details",
        "type": "object",
        "required": [
          "btcAddress"
        ],
        "additionalProperties": false,
        "properties": {
          "btcAddress": {
            "title": "BTC Address",
            "description": "The Bitcoin address of the recipient",
            "type": "string",
            "minLength": 26,
            "maxLength": 35,
            "pattern": "^[13][a-km-zA-HJ-NP-Z1-9]{25,34}$"
          }
        }
      }
    }
  ],
  "requiredClaims": {
    "id": "8cd5004c-3c37-4863-978b-b412bafbd976",
    "input_descriptors": [{
      "id": "ccda8b7a-4654-3f56-c63a-670bada959e0",
      "constraints": {
        "fields": [
          {
            "path": ["$.type[*]"],
            "filter": {
              "type": "string",
              "pattern": "^WorkshopAttendeeCredential$"
            }
          }
        ]
      }
    }]
  }
}
